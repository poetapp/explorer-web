{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "lib": [ "DOM", "DOM.Iterable","ScriptHost", "es2017" ],
    "baseUrl": "./src/",
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*",
    "./typings/**/*"
  ],
  "exclude": [
    "**/*.stories.tsx",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx"
  ]
}
